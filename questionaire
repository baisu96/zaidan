    <script>
        const correctAnswers = {
            q1: "hazelnutty",
            q2: "chill guy",
            q3: "diddy",
            q4: "all (she is perfect)",
            q5: "Rumaisa",
            q6: "our lives",
            q7: "sleep",
            q8: "cuddle it and cry because u have no human to cuddle with",
            q9: "communication",
            q10: "schokolade"
        };

        function checkResults() {
            const form = document.getElementById('quiz-form');
            const resultsDiv = document.getElementById('results');
            const scoreDisplay = document.getElementById('score');
            const wrongAnswersDisplay = document.getElementById('wrong-answers');

            let score = 0;
            let wrongAnswers = [];

            for (let question in correctAnswers) {
                const userAnswer = form[question]?.value;
                if (userAnswer === correctAnswers[question]) {
                    score++;
                } else {
                    wrongAnswers.push(`Question ${question.slice(1)}: Correct answer is "${correctAnswers[question]}"`);
                }
            }

            scoreDisplay.textContent = `You scored ${score} out of ${Object.keys(correctAnswers).length}`;
            wrongAnswersDisplay.innerHTML = wrongAnswers.length
                ? `You got the following questions wrong:<br>${wrongAnswers.join('<br>')}`
                : "Perfect score! You got all answers correct!";
            resultsDiv.style.display = "block";
        }
    </script>
